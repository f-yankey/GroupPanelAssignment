@model TeamViewModel


<div class="col-md-4">
    <div class="card">
        <div class="card-body">
            <h6 class="card-title">@Model.TeamName</h6>
            <span><b><i>Supervisor(s)</i></b></span>
            <ul>
                @foreach (var item in Model.Supervisors)
                {
                    <li>@item.FullName</li>
                }
            </ul>
            <span><b>Member(s)</b></span>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>CWA</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Members)
                    {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.CWA</td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</div>


