@page
@model GroupPanelAssignment.Pages.GroupManagement.AutomaticGroupingModel
@{

}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="col-md-6">
                    <h5 class="card-title"> Automatic Grouping </h5>
                </div>
                <div class="col-md-6">

                </div>
            </div>
            <div class="card-body">
                <div class="row pt-4">
                    <form method="post" id="user-add-form">
                        <div class="row pb-3">
                            <div class="col-10">
                                <label asp-for="Input.ExemptedSupervisors" class="form-label">Do not include the following supervisors: </label>
                                <select class="form-select select-list" asp-items="@Model.SupervisorSelectList" asp-for="Input.ExemptedSupervisors" multiple="multiple">
                                </select>
                            </div>
                        </div>

                        <div class="row pb-3">
                            <div class="col-10">
                                <label asp-for="Input.ExemptedStudents" class="form-label">Do not include the following students: </label>
                                <select class="form-select select-list" asp-items="@Model.StudentSelectList" asp-for="Input.ExemptedStudents" multiple="multiple">
                                </select>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Continue <i class="bi bi-arrow-right"></i> </button>
                        </div>

                    </form>
                </div>

                @if (Model.Teams != null)
                {
                    <div class="row pt-4">
                        @if (Model.Teams.Count > 0)
                        {
                            @foreach (var item in Model.Teams)
                            {
                                @await Html.PartialAsync("~/Pages/GroupManagement/PartialViews/_AddTeamDisplayItem.cshtml", item)
                            }
                            <form method="post" id="user-add-form">
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Save <i class="bi bi-save"></i> </button>
                                </div>
                            </form>

                        }
                        else
                        {
                            <h5 class="text-danger text-center">It looks like you don't have any <b>students</b> or <b>supervisors</b> to pair</h5>
                        }

                    </div>
                }

            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
<script>
    $(".select-list").select2();
</script>